{
    "manifest_version": 2,
    "name": "TBD",
    "version": "TBD",
    "description": "TBD",
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "assets/icon16.png",
            "48": "assets/icon48.png",
            "128": "assets/icon128.png"
        }
    },
    "permissions": [
        "activeTab",
        "storage",
        "webNavigation",
        "notifications",
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "scripts": [
            "serviceWorker.js"
        ],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "contentReceiver.js"
            ],
            "run_at": "document_start"
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "TBD",
            "strict_min_version": "91.0"
        }
    }
}